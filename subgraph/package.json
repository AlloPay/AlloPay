{
  "name": "subgraph",
  "version": "0.1",
  "scripts": {
    "configure:testnet": "mustache config/testnet.json subgraph.mustache.yaml > subgraph.yaml",
    "generate:abi": "(cd .. && yarn workspace contracts build) && node ./scripts/generate-abi.js",
    "generate": "yarn generate:abi && graph codegen",
    "build": "graph build",
    "clean": "npx rimraf build data generated subgraph.yaml",
    "hosted:auth": "graph auth --product hosted-service",
    "dev:create": "graph create --node http://graph.allopay.io:8020 allopay-dev",
    "dev:deploy": "graph deploy --node http://graph.allopay.io:8020 --ipfs http://graph.allopay.io:5001 -l 0.1 allopay-dev",
    "dev:deploy-hosted": "graph deploy --product hosted-service hbriese/allopay-dev",
    "prod:create": "graph create --node http://graph.allopay.io:8020 allopay",
    "prod:deploy": "graph deploy --node http://graph.allopay.io:8020 --ipfs http://graph.allopay.io:5001 -l 0.1 allopay",
    "prod:deploy-hosted": "graph deploy --product hosted-service hbriese/allopay"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "0.33.1",
    "@graphprotocol/graph-ts": "0.27.0"
  },
  "devDependencies": {
    "mustache": "^4.2.0"
  }
}
