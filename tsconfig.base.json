{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2021",
    "lib": ["ESNext"],

    "strict": true,

    "moduleResolution": "Node",
    "esModuleInterop": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "composite": true,
    "incremental": true
  }
}
