{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ESNext"],
    "module": "CommonJS",
    "moduleResolution": "Node",

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "composite": true
  }
}
