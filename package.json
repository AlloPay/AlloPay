{
  "name": "zallo",
  "packageManager": "yarn@3.2.4",
  "private": true,
  "version": "0.1.0",
  "author": "Hayden Briese <haydenbriese@gmail.com>",
  "workspaces": [
    "api",
    "app",
    "contracts",
    "docs",
    "lib",
    "subgraph"
  ],
  "scripts": {
    "api": "yarn workspace api",
    "app": "yarn workspace app",
    "contracts": "yarn workspace contracts",
    "docs": "yarn workspace docs",
    "lib": "yarn workspace lib",
    "subgraph": "yarn workspace subgraph",
    "postinstall": "husky install .config/husky",
    "lint": "eslint \"**/*.{js,ts,jsx,tsx}\"",
    "lint:fix": "yarn lint --fix",
    "prettier": "prettier --config .config/.prettierrc --ignore-path .config/.prettierignore --ignore-unknown",
    "clean": "yarn workspaces foreach run clean",
    "update-env": "npx dotenv-vault push production && npx dotenv-vault build"
  },
  "engines": {
    "node": "18.12.1",
    "yarn": "3.x"
  },
  "devDependencies": {
    "@types/node": "^16.18.11",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "eslint": "^8.38.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7"
  },
  "resolutions": {
    "graphql": "^16.6.0",
    "react-native-jazzicon@0.1.2": "patch:react-native-jazzicon@npm:0.1.2#.yarn/patches/react-native-jazzicon-npm-0.1.2-c1633b051f.patch",
    "@ethersproject/abstract-provider": "5.7.0",
    "@types/react": "17.x"
  },
  "dependencies": {
    "node-gyp": "^9.3.0"
  }
}
