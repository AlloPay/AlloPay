{
  "extends": ["//"],
  "pipeline": {
    "prepare": {
      "dependsOn": ["^build"]
    },
    "build": {
      "dependsOn": ["prepare"],
      "inputs": ["dbschema/**", "src/**"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "dependsOn": ["prepare"],
      "cache": false,
      "persistent": true
    },
    "serve": {
      "dependsOn": ["build"]
    },
    "test": {
      "dependsOn": ["prepare"],
      "inputs": ["dbschema/**", "src/**", "jest.config.ts"]
    }
  }
}
