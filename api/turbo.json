{
  "extends": ["//"],
  "pipeline": {
    "prepare": {
      "dependsOn": ["^build"]
    },
    "generate:gql": {
      "inputs": ["codegen.ts", "src/features/prices/**/*.ts"],
      "outputs": ["src/features/prices/__generated__/**"]
    },
    "build": {
      "dependsOn": ["prepare"],
      "inputs": ["dbschema/**", "src/**"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "dependsOn": ["prepare"],
      "cache": false,
      "persistent": true
    },
    "serve": {
      "dependsOn": ["build"]
    },
    "test": {
      "dependsOn": ["prepare"],
      "inputs": ["dbschema/**", "src/**", "jest.config.ts"]
    },
    "db:prepare": {
      "dependsOn": ["prepare"],
      "inputs": ["dbschema/**", "src/**", "jest.config.ts"]
    }
  }
}
