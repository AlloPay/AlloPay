{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "Node10",
    "baseUrl": "./",
    "outDir": "./dist",
    "lib": ["ESNext"],
    "incremental": true,
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~/edgeql-js": ["./dbschema/edgeql-js"],
      "~/edgeql-js/*": ["./dbschema/edgeql-js/*"],
      "~/edgeql-interfaces": ["./dbschema/interfaces"],
      "~/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "generated/**/*", "dbschema/**/*"]
}
