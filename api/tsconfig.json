{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "./dist",
    "incremental": true,
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~/edgeql-js": ["./dbschema/edgeql-js"],
      "~/edgeql-js/*": ["./dbschema/edgeql-js/*"],
      "~/edgeql-interfaces": ["./dbschema/interfaces"],
      "~/*": ["./src/*"],
      "@gen/*": ["./generated/*"]
    }
  },
  "references": [{ "path": "../lib" }],
  "include": ["src/**/*", "generated/**/*", "dbschema/**/*"]
}
