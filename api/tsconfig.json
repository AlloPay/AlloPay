{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",

    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"],
      "@gen/*": ["./generated/*"]
    },

    "allowJs": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "noUnusedLocals": false
  },
  "references": [{ "path": "../lib" }],
  "include": ["src/**/*", "generated/**/*"]
}
