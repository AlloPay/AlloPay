{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",

    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"],
      "@gen/*": ["./generated/*"],
      "@db/*": ["./dbschema/*"]
    },

    "allowJs": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "downlevelIteration": true
  },
  "references": [{ "path": "../lib" }],
  "include": ["src/**/*", "generated/**/*", "dbschema/**/*"]
}
