{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "strict": true,

    "baseUrl": "./",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@features/*": ["./src/features/*"],
      "@gql/*": ["./src/gql/*"],
      "@util/*": ["./src/util/*"],
      "~/*": ["./src/*"]
    }
  }
}
